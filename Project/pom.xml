<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.project</groupId>
    <artifactId>project</artifactId>
    <version>0.0.1</version>

    <dependencies>
        <dependency>
            <groupId>ru.downloader</groupId>
            <artifactId>downloader</artifactId>
            <version>0.0.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>ru.project.Main</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>